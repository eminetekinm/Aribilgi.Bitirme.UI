@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div ng-app="productEditController" ng-controller="ProductController">
        <div class="page-content-product">
            <div class="main-product">
                <div class="container">

                    <div class="row">
                        <div class="col-lg-3 col-sm-6 col-md-3" ng-repeat="category in GetSingleCategoryWithProductByCategoryId.products">
                            <div>
                                <br />
                            </div>
                               <div>
                                <br />
                            </div>

                            <div class="prod-box">
                                <div class="prod-i">

                                    <img src="{{category.photo}}" alt="#" />
                                </div>

                                <div class="prod-dit clearfix">
                                    <div class="dit-t clearfix">
                                        <div class="left-ti">
                                            <h4>{{category.name}}</h4>
                                            <br />
                                            <h5 style="font-weight:bold">{{GetSingleCategoryWithProductByCategoryId.name}}</h5>
                                            <br />
                                            <h4>Fiyat  ₺{{category.price}}</h4>
                                            <br />
                                            <h4>Stok  {{category.stock}}</h4>
                                            <br />
                                        </div>

                                    </div>

                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts{
    <script src="~/js/product.js"></script>
  }
